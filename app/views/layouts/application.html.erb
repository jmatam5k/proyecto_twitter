<!DOCTYPE html>
<html>
	<head>
		<title>Twitter</title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>
	<body>
	    
		<nav class="menu" tabindex="0">
			<div class="smartphone-menu-trigger"></div>
			<% if user_signed_in? %>
			<header class="avatar">
					<img src="https://s3.amazonaws.com/uifaces/faces/twitter/kolage/128.jpg" />
				<h2>John D.</h2>
			</header>
			
			<ul>
				<li tabindex="0" class="icon-dashboard"><span>Dashboard</span></li>
				<li tabindex="0" class="icon-customers"><span>Customers</span></li>
				<li tabindex="0" class="icon-users"><span>Users</span></li>
				<li tabindex="0" class="icon-settings">
					<%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
				</li>
			</ul>
			<% else %>
			<ul>
				<li tabindex="0" class="icon-dashboard">
					<%= link_to "Iniciar Sesión", new_user_session_path, class:'btn btn-outline-primary' %>
				</li>
				<li tabindex="0" class="icon-customers">
					<%= link_to "Regístrate", new_user_registration_path, class: 'btn btn-outline-primary' %>
				</li>
			</ul>
			<% end %>
		</nav>
		
		<%# <%= render 'shared/navbar' %> 
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>
		<div class="container pt-2">
			<%= yield %>
		</div>
	</body>
</html>
